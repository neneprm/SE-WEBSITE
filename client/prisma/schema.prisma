// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Subject {
  id           String  @id @default(cuid())
  subjectId    String
  year         Int
  semester     Int
  name         String
  prerequisite String?
  description  String  @db.Text
  credit       Int
  lectureHour  Int?
  labHour      Int?
  studyHour    Int?
  program      Program @default(KMITL)
  track        Track?

  @@unique([subjectId, year, semester])
  @@index([subjectId, year, semester])
}

enum Track {
  AI
  IoT
  Metaverse
}

enum Program {
  KMITL
  Glasgow
}
